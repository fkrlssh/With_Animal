<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--홈 화면 이동 버튼-->
        <ImageButton
            android:id="@+id/register_return_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신규 동물 등록"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>
<!--등록된 동물 사진-->
    <ImageView
        android:id="@+id/register_petphoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/graybox"
        android:scaleType="centerCrop"/>
<!--사진 등록 버튼-->
    <android.widget.Button
        android:id="@+id/register_photoB"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:text="사진 등록"
        android:textColor="#FFFFFF"
        android:background="@drawable/orangebox"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="이름"
        android:textStyle="bold"/>
<!--동물 이름-->
    <EditText
        android:id="@+id/register_petname"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textColorHint="#80000000"
        android:background="@drawable/graybox"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="종"
        android:textStyle="bold"/>
<!--동물 종-->
    <EditText
        android:id="@+id/register_petspecies"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textColorHint="#80000000"
        android:background="@drawable/graybox"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="나이"
        android:textStyle="bold"/>
<!--동물 나이-->
    <EditText
        android:id="@+id/register_petage"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:textColorHint="#80000000"
        android:background="@drawable/graybox"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="성별"
        android:textStyle="bold"/>
<!--동물 성별 선택 라디오그룹-->
    <android.widget.RadioGroup
        android:id="@+id/register_RG"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
<!--성별 남자-->
        <android.widget.RadioButton
            android:id="@+id/register_male"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="남"/>
<!--성별 여자-->
        <android.widget.RadioButton
            android:id="@+id/register_female"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:text="여"/>
    </android.widget.RadioGroup>
<!--등록 버튼-->
    <android.widget.Button
        android:id="@+id/registerB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="등록"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:background="@drawable/orangebox"/>

</LinearLayout>