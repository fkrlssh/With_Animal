<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/missingpage_return_missingB"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실종 동물 정보"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">
<!--실종 동물 사진 출력-->
        <ImageView
            android:id="@+id/missing_page_petphoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/graybox"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/missing_page_petphoto"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="이름"
                android:textSize="18sp"
                android:textStyle="bold"/>
<!--실종 동물 이름 출력-->
            <TextView
                android:id="@+id/missing_page_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingTop="4dp"
                android:paddingLeft="10dp"
                android:background="@drawable/graybox"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/missing_page_petphoto"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="종"
                android:textSize="18sp"
                android:textStyle="bold"/>
<!--실종 동물 종 출력-->
            <TextView
                android:id="@+id/missing_page_spicies"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingTop="4dp"
                android:paddingLeft="10dp"
                android:background="@drawable/graybox"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/missing_page_petphoto"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="나이"
                android:textSize="18sp"
                android:textStyle="bold"/>
<!--실종 동물 나이 출력-->
            <TextView
                android:id="@+id/missing_page_age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingTop="4dp"
                android:paddingLeft="10dp"
                android:background="@drawable/graybox"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/missing_page_petphoto"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="성별"
                android:textSize="18sp"
                android:textStyle="bold"/>
<!--실종 동물 성별 출력-->
            <TextView
                android:id="@+id/missing_page_gender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingTop="4dp"
                android:paddingLeft="10dp"
                android:background="@drawable/graybox"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="실종 날짜"
        android:textSize="18sp"
        android:textStyle="bold"/>
<!--실종 날짜 출력-->
    <TextView
        android:id="@+id/missing_page_date"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:padding="10dp"
        android:background="@drawable/graybox"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="실종 장소"
        android:textSize="18sp"
        android:textStyle="bold"/>
<!--실종 장소 출력-->
    <TextView
        android:id="@+id/missing_page_place"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:gravity="top"
        android:padding="10dp"
        android:background="@drawable/graybox"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="특징"
        android:textSize="18sp"
        android:textStyle="bold"/>
<!--실종 동물 특징 출력-->
    <TextView
        android:id="@+id/missing_page_char"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:gravity="top"
        android:padding="10dp"
        android:background="@drawable/graybox"/>

<!--실종 동물 발견 신고 버튼-->
    <android.widget.Button
        android:id="@+id/missing_page_findButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="발견 신고"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:background="@drawable/orangebox"/>

</LinearLayout>