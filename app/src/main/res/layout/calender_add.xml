<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title"></ImageView>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="일정 추가"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- 제목 입력 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:text="제목"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="제목을 작성하세요."
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:background="@drawable/graybox"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_access_time_24"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="시간 설정"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 시간 입력 -->
    <TimePicker
        android:id="@+id/plan_time_picker"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:timePickerMode="spinner"
        android:background="@drawable/graybox"/>

    <!-- 메모 입력 -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_assignment_24"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/plan_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="메모를 입력하세요."
            android:paddingLeft="10dp"
            android:background="@drawable/graybox"/>

    </LinearLayout>
<!--알람 시간 입력-->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_add_alarm_24"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"/>

        <Spinner
            android:id="@+id/plan_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="10분전"
            android:paddingLeft="10dp"
            android:background="@drawable/graybox"/>

    </LinearLayout>

    <!-- 등록, 취소 버튼 -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <android.widget.Button
            android:id="@+id/add_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="등록"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/orangebox"/>

        <android.widget.Button
            android:id="@+id/add_list_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/orangebox"/>

    </LinearLayout>

</LinearLayout>