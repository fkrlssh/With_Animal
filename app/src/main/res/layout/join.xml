<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--로그인 페이지로 돌아가는 버튼-->
        <ImageButton
            android:id="@+id/join_return_login"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <!--회원가입 이름 입력-->
    <EditText
        android:id="@+id/join_name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:hint="이름"
        android:textSize="12dp"
        android:textColorHint="#80000000"
        android:background="@drawable/graybox"/>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">


<!--회원가입 아이디 입력-->
        <EditText
            android:id="@+id/join_id"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:hint="아이디"
            android:textSize="12sp"
            android:textColorHint="#80000000"
            android:background="@drawable/graybox"/>
<!-- 아이디 중복 체크 버튼-->
        <android.widget.Button
            android:id="@+id/id_checkButton"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="중복 체크"
            android:textColor="#FFFFFF"
            android:background="@drawable/orangebox"/>

    </LinearLayout>
<!--회원가입 비밀번호 입력-->
    <EditText
        android:id="@+id/join_password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:hint="비밀번호"
        android:textSize="12dp"
        android:textColorHint="#80000000"
        android:inputType="textPassword"
        android:background="@drawable/graybox"/>
<!--회원가입 비밀번호 확인 입력-->
    <EditText
        android:id="@+id/join_password_check"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:hint="비밀번호 확인"
        android:textSize="12sp"
        android:textColorHint="#80000000"
        android:inputType="textPassword"
        android:background="@drawable/graybox"/>
<!--회원가입 전화번호 입력-->
    <EditText
        android:id="@+id/join_tel"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:hint="전화번호    '-' 구분없이 입력"
        android:textSize="12sp"
        android:textColorHint="#80000000"
        android:background="@drawable/graybox"/>
<!--회원가입 이메일 입력-->
    <EditText
        android:id="@+id/join_email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:hint="이메일"
        android:textSize="12sp"
        android:textColorHint="#80000000"
        android:background="@drawable/graybox"/>
<!--회원가입 완료 버튼-->
    <android.widget.Button
        android:id="@+id/joinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:text="회원가입"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:background="@drawable/orangebox"/>
</LinearLayout>
