<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title"/>

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">
<!--검색창-->
        <EditText
            android:id="@+id/food_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="검색어를 입력하세요."
            android:textSize="15sp"
            android:paddingLeft="40dp"
            android:background="@drawable/graybox"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/baseline_search_24"/>

        <RelativeLayout
            android:layout_width="375dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/food_search"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">
<!--홈 이동 버튼-->
            <ImageButton
                android:id="@+id/food_return_main"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/food_return_main"
                android:text="음식 정보"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="160dp"
                android:text="섭취 가능"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_toRightOf="@+id/food_return_main"
                android:background="@drawable/orangebox"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:text="섭취 불가능"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/darkgraybox"/>


            <ScrollView
                android:id="@+id/food_scroll"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/food_return_main"
                android:fillViewport="true">

<!--섭취 유무 리스트-->
                    <ListView
                        android:id="@+id/hospital_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </ScrollView>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>