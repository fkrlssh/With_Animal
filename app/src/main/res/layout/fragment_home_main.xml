<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title"/>

        <!--카테고리 창 버튼-->
        <ImageButton
            android:id="@+id/home_categoryB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_menu_24" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/home_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:visibility="visible" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <View
                android:layout_width="375dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:background="@drawable/mainbox"/>
            <!--동물 사진-->
            <ImageView
                android:id="@+id/home_petphoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="155dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/wa_icon"
                android:scaleType="centerCrop"/>
            <!--동물 이름-->
            <TextView
                android:id="@+id/home_petname"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="155dp"
                android:layout_marginLeft="180dp"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/textbox"/>
            <!--동물 종-->
            <TextView
                android:id="@+id/home_petspecies"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="195dp"
                android:layout_marginLeft="180dp"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/textbox"/>
            <!--동물 나이-->
            <TextView
                android:id="@+id/home_petage"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="235dp"
                android:layout_marginLeft="180dp"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/textbox"/>

            <TextView
                android:id="@+id/home_petgender"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="275dp"
                android:layout_marginLeft="180dp"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/textbox"/>

            <View
                android:layout_width="374dp"
                android:layout_height="40dp"
                android:background="@drawable/homeorangetop"
                android:layout_marginTop="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="107dp"
                android:layout_gravity="center_horizontal"
                android:text="My Animal"
                android:textColor="#FFFFFF"
                android:textSize="18dp"/>

            <ImageButton
                android:id="@+id/homeplusB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="107dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@drawable/baseline_add_circle_24w"/>

            <View
                android:layout_width="375dp"
                android:layout_height="250dp"
                android:layout_marginTop="340dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/orangelinebox"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="14dp"
                android:text="To do list"
                android:textColor="#FF5e00"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <!--캘린더 이동 버튼-->
            <ImageButton
                android:id="@+id/home_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:layout_marginLeft="340dp"
                android:src="@drawable/baseline_calendar_month_24"
                android:background="@android:color/transparent"/>

            <ScrollView
                android:id="@+id/home_scroll"
                android:layout_width="375dp"
                android:layout_height="210dp"
                android:layout_marginTop="380dp"
                android:fillViewport="true">
                <!--투두리스트 리스트뷰-->
                <ListView
                    android:id="@+id/home_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:divider="@null"
                    android:dividerHeight="10dp"
                    android:scrollbars="none"/>
            </ScrollView>

        </FrameLayout>

    </FrameLayout>
    <!--카테고리창-->
    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="650dp"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FEF7FF">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="15dp"
            android:background="#FF5e00"/>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_local_hospital_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="병원 정보"/>
            <!--병원 페이지 이동 버튼-->
            <Button
                android:id="@+id/hospital_category"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_food_bank_24"/>
            <!--식품 페이지 이동 버튼-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="음식 정보"/>

            <Button
                android:id="@+id/food_category"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_search_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="실종 동물"/>
            <!--동물 실종 페이지 이동 버튼-->
            <Button
                android:id="@+id/missing_category"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_calendar_month_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="캘린더"/>
            <!--달력 이동 버튼-->
            <Button
                android:id="@+id/calender_category"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>